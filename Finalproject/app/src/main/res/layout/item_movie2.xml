<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:clickable="true"
  android:focusable="true"
  android:foreground="?attr/selectableItemBackgroundBorderless">

  <ImageView
    android:id="@+id/search_poster"
    android:layout_width="125dp"
    android:layout_height="175dp"
    android:layout_marginBottom="32dp"
    android:scaleType="centerCrop"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@drawable/ic_launcher_background" />

  <TextView
    android:id="@+id/search_title"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:text="TextView"
    android:textColor="#fff"
    android:textSize="24dp"
    app:layout_constraintBottom_toTopOf="@+id/search_id"
    app:layout_constraintStart_toEndOf="@+id/search_poster"
    app:layout_constraintTop_toTopOf="@+id/search_poster" />

  <TextView
    android:id="@+id/search_id"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="TextView"
    android:textColor="#999"
    android:textSize="16dp"
    app:layout_constraintBottom_toTopOf="@+id/search_overview"
    app:layout_constraintStart_toStartOf="@+id/search_title"
    app:layout_constraintTop_toBottomOf="@+id/search_title" />

  <TextView
    android:id="@+id/search_overview"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:ellipsize="end"
    android:singleLine="true"
    android:text="TextView"
    android:textColor="#999"
    android:textSize="16dp"
    app:layout_constraintBottom_toBottomOf="@+id/search_poster"
    app:layout_constraintStart_toStartOf="@+id/search_id"
    app:layout_constraintTop_toBottomOf="@+id/search_id" />
</androidx.constraintlayout.widget.ConstraintLayout>